<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home Page</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/match_play.css" type="text/css" />
    <link rel="stylesheet" href="/styles/navbar.css" type="text/css" />


    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <audio id="guncock"><source src="/images/guncock.mp3" type="audio/mpeg"></audio>
      <audio id="gunshot"><source src="/images/gunshot.mp3" type="audio/mpeg"></audio>
  </head>

  <body>

    <div>
        <% include ./partials/_navbar %>
      </div>
      <br>

    <header>
      <div class="prize">
        <div class="bountyposter">
          BOUNTY
          <img class="wantedposter" src='/images/prize<%=matchState["prize"]["faceUp"]%>.png' height=200 width=150 style="border:double" >
        </div>
          <form class="bid-form" action="bid/" method="POST"><input id="player_bid" name="player_bid" value="X" type="text">
            <% if (player === 1|| player === 2) {%>
            <button class="drawbutton">DRAW</button>
            <% }%>
          </form>
      </div>

      <% if (player === 1|| player === null) {%>
        <div class="scoredisplay">
          <div class="playerscore">COLLECTED: $<%=matchState["player1"]["score"]%></div>
          <div class="enemyscore">RIVAL: $<%=matchState["player2"]["score"]%></div>
        </div>
      <div class="playercards">
        <% for(let card of matchState["player1"]["hand"]) {%>
            <input type="image" class="singlecard" id="<%=[card]%>" src='/images/number<%=[card]%>.jpg'>
        <% }}%>
      </div>

      <% if (player === 2) {%>
        <div class="scoredisplay">
          <div class="playerscore">COLLECTED: $<%=matchState["player2"]["score"]%></div>
          <div class="enemyscore">RIVAL: $<%=matchState["player1"]["score"]%></div>
        </div>
      <div class="playercards">
        <% for(let card of matchState["player2"]["hand"]) {%>
          <img type="image" class="singlecard" id="<%=[card]%>" src='/images/number<%=[card]%>.jpg'>
        <% }}%>
</div>
  </header>
  </body>
</html>
